<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">
  
  <select id="select" resultType="com.java.web.ListBean">
  		SELECT NO, title , TXT FROM board WHERE DELYN = 'N'
  </select>
  
  <select id="tt" resultType="com.java.web.ListBean" parameterType="Integer">
  		SELECT NO, title , TXT FROM board WHERE NO = #{no}
  </select>
  
  <insert id="insert" parameterType="com.java.web.ListBean">
  		INSERT INTO board (title,TXT) VALUES (#{title},#{txt})
  </insert>
  
  <update id="update" parameterType="com.java.web.ListBean">
  		update board set TXT = #{txt} where NO = #{no}
  </update>
  
  <update id="delete" parameterType="com.java.web.ListBean">
  		update board set DELYN = 'Y' where NO = #{no}
  </update>
</mapper>